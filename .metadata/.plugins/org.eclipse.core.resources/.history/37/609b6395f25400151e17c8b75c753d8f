package binarytodecimal;

import java.util.Scanner;

public class BinaryToDecimal{
	
	public static void main(String args[]){
	
	int inputLCount = 0;
	int count = 0;
	int column = 0;
	
	Scanner scan = new Scanner(System.in);
	System.out.println("Enter some binary: ");
	String input = scan.nextLine(); //Get the binary input
	
		//Loop that checks each digit of the string to see if it is a zero or a one
		for (int i=1; i <= input.length(); i++){
			inputLCount = input.length() - i;
			if(input.charAt(inputLCount) == '1'){
				count = (int) (count + Math.pow(2, column));
				column++;
			}
			else if (input.charAt(inputLCount) == '0'){
				column++;
			}
		}
		
	scan.close();
	System.out.println("Decimal Answer is: " + count);
	}
	
}